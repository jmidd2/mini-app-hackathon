{
  "name": "@jmidd-dev/socket-todo-server",
  "version": "0.0.1",
  "description": "A simple server to manage todo lists",
  "main": "dist/server.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "nodemon dist/index.js",
    "build": "npm run format && npm run lint:fix && npm run type:check && npm run babel",
    "type:check": "tsc",
    "babel": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps both",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmidd2/mini-app-hackathon.git"
  },
  "author": "Jon Middleton",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jmidd2/mini-app-hackathon/issues"
  },
  "homepage": "https://github.com/jmidd2/mini-app-hackathon#readme",
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1",
    "socket.io": "^4.7.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@types/node": "^20.4.2",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "typescript": "^5.1.6"
  }
}
